<Window x:Class="WpfTeam04.Project.DataVieuwBoekTerug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTeam04.Project"
        mc:Ignorable="d"
        Title="DataVieuwBoekTerug" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="15 0 0 0 "/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    </Window.Resources>


    <DockPanel>


        <Menu DockPanel.Dock="Top">
            <MenuItem Header="menu">
                <MenuItem Header="Afsluiten" Name="mnuAfsluiten" />
                <MenuItem Header="Uitloggen"  Name="mnuUitloggen" />
            </MenuItem>
        </Menu>


        <DockPanel DockPanel.Dock="Bottom" Background="Black" >
            <Label Name="lblDateTime"/>
            <Label Content="WPL 2 - Team04" DockPanel.Dock="Right"/>
            <Label Content="Paged - Boek Terug Binnen" HorizontalAlignment="Center" />
        </DockPanel>


        <DataGrid x:Name="dtgBoekTerug" Padding="10"></DataGrid>

    </DockPanel>


</Window>
