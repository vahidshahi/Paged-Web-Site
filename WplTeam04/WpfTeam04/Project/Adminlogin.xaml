<Window x:Class="WpfTeam04.Project.Adminlogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTeam04.Project"
        mc:Ignorable="d"
        Title="Adminlogin" Height="450" Width="800">
    <Grid>
        <StackPanel Background="PaleGoldenrod">
            <TextBlock FontSize="20" HorizontalAlignment="Center">Admin login</TextBlock>
            <Image Width="100">
                <Image.Source>
                    <BitmapImage UriSource="../assets/logo.png"></BitmapImage>
                </Image.Source>
            </Image>
            <WrapPanel HorizontalAlignment="Center" Margin="0 10 0 0">
                <TextBlock FontSize="20" Margin="5">Password</TextBlock>
                <PasswordBox x:Name="PasswrBoxPassword" Width="180" Margin="5" Password=""></PasswordBox>
            </WrapPanel>
            <Button x:Name="BtnLogIn" Width="100" FontSize="18" Margin="10 5 0 0" Background="Snow" >Login</Button>
            <Button Width="100" Margin="10 10 0 0" FontSize="15" Background="White">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
