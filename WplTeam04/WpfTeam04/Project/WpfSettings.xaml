<Window x:Class="WpfTeam04.Project.WpfSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTeam04.Project"
        mc:Ignorable="d"  Loaded="Window_Loaded"
        Title="WpfSettings" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="10">
                <Label Content="SQL Server :" Width="150"></Label>
                <TextBox x:Name="TxtSqlserver" Width="150"></TextBox>
            </WrapPanel>
                
             <WrapPanel Margin="10">
                <Label Content="Project Database :" Width="150"></Label>
                        <TextBox x:Name="TxtProjDb" Width="150"></TextBox>
            </WrapPanel>

            <WrapPanel Margin="10">
                <Label Content="Individual Database :" Width="150"></Label>
                <TextBox x:Name="TxtIndjDb" Width="150"></TextBox>
            </WrapPanel>
            <TextBox x:Name="TxtProjConnstring" Width="300" Margin="5">
                
            </TextBox>
            <TextBox x:Name="TxtIndConnstring" Width="300" Margin="5">

            </TextBox>
        </StackPanel>
        
    </Grid>
</Window>
